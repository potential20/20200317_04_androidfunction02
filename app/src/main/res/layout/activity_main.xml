<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="30dp"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/phoneNumEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="전화번호 입력"/>

        <Button
            android:id="@+id/dialBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전화 걸기 (Dial)" />

        <Button
            android:id="@+id/callBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전화 걸기 (CALL)" />

        <Button
            android:id="@+id/smsBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="문자 보내기" />
        <Button
            android:id="@+id/webLinkBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="네이버로 이동하기" />
        <Button
            android:id="@+id/playStoreBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="앱 광고 링크" />
        <Button
            android:id="@+id/googleMapBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="구글 지도 띄워보기" />



    </LinearLayout>

</layout>
